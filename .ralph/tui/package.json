{
  "name": "ralph",
  "version": "1.0.0",
  "description": "Terminal UI for monitoring and controlling autonomous AI coding agent sessions",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Ryan Henderson",
    "url": "https://github.com/htxryan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htxryan/ralph-tui.git"
  },
  "homepage": "https://github.com/htxryan/ralph-tui#readme",
  "bugs": {
    "url": "https://github.com/htxryan/ralph-tui/issues"
  },
  "keywords": [
    "cli",
    "tui",
    "terminal",
    "ai",
    "agent",
    "autonomous",
    "coding",
    "claude",
    "llm",
    "ink",
    "react"
  ],
  "bin": {
    "ralph": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "files": [
    "dist",
    "defaults",
    "scripts",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:tsx": "tsx src/cli.tsx",
    "start": "node dist/cli.js",
    "run": "pnpm install && pnpm build && pnpm start",
    "install:global": "./install.sh",
    "install:global:prod": "./install.sh --prod",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "test:ci": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run typecheck && pnpm run test:run"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "ink": "^5.2.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.14",
    "@vitest/coverage-v8": "^2.1.8",
    "cli-testing-library": "^3.0.1",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
