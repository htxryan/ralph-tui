{
  "name": "ralph-tui",
  "version": "1.0.0",
  "description": "Terminal UI for monitoring Ralph autonomous agent system",
  "type": "module",
  "bin": {
    "ralph-tui": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:tsx": "tsx src/cli.tsx",
    "start": "node dist/cli.js",
    "run": "pnpm install && pnpm build && pnpm start",
    "install:global": "./install.sh",
    "install:global:prod": "./install.sh --prod",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "ink": "^5.2.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.14",
    "cli-testing-library": "^3.0.1",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
