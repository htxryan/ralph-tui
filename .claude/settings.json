{
  "permissions": {
    "deny": [
      "Read(.ai-docs/.archive/**)", 
      "Read(.ai-docs/**/.archive/**)", 
      "Read(.claude/.archive/**)", 
      "Read(.claude/**/.archive/**)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7", "chrome-devtools", "serena", "mermaid-validator"],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact|clear",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/tools/reset-context.sh"
          }
        ]
      }
    ]
  }
}